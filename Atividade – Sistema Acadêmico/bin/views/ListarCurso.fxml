<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="listarCursoRoot" minHeight="400.0" minWidth="700.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifms.controller.ListaCursoController">
   <top>
      <Label text="Atividade - Sistema Acadêmico" BorderPane.alignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
   
   
   
   
      <TableView fx:id="tableCursos" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="columCodigo" prefWidth="75.0" style="-fx-alignment: center;" text="codigo" />
          <TableColumn fx:id="columNivel" prefWidth="75.0" style="-fx-alignment: center;" text="nivel" />
            <TableColumn fx:id="columNome" prefWidth="75.0" style="-fx-alignment: center;" text="nome" />
            <TableColumn fx:id="columCargaHoraria" prefWidth="75.0" style="-fx-alignment: center;" text="carga horaria" />
            <TableColumn fx:id="columSituacao" prefWidth="75.0" style="-fx-alignment: center;" text="situação" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      
      
      
      
   </center>
   
   
   
   
   <bottom>
      <Button mnemonicParsing="false" onAction="#showVoltar" text="Voltar" BorderPane.alignment="CENTER">
         <font>
            <Font size="13.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   
   
   
   
</BorderPane>
